<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/tanggalan"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textColor="@color/black"
            android:id="@+id/kodeorder"
            android:textSize="12dp"
            android:fontFamily="@font/poppins"
            />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Customer : "
            android:textColor="@color/black"
            android:textSize="14dp"
            android:id="@+id/txt_namacustomer"
            android:fontFamily="@font/poppins_semibold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/txt_harga_pesanan"
            android:text="Rp."
            android:textSize="14dp"
            android:fontFamily="@font/poppins"
            />

        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/gambarwarung"
            android:layout_marginLeft="20dp"
            android:src="@drawable/line" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_marginRight="30dp"
        android:id="@+id/tanggal_order"
        android:text="20:00"
        android:fontFamily="@font/poppins_semibold"/>

</RelativeLayout>