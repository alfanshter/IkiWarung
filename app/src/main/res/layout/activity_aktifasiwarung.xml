<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
            <variable
                name="viewmodels"
                type="com.alfanshter.iki_warung.viewmodel.UsersViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".aktifasiWarungActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnUpload">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp"
                    android:id="@+id/baris1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengaturan Warung Anda"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins"
                        android:id="@+id/judul"
                        android:textSize="24dp"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warung buka Jam ?"
                        android:layout_marginTop="20dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins"

                        />

                    <TextView
                        android:paddingTop="8dp"
                        android:text="10:00:00"
                        android:id="@+id/edit_openwarung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/black"
                        android:background="@drawable/kotakisi"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warung tutup hari apa ?"
                        android:layout_marginTop="10dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins"

                        />

                    <Spinner
                        android:id="@+id/spinner_buka"
                        android:layout_marginTop="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warung tutup jam berapa ?"
                        android:layout_marginTop="10dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/poppins"

                        />

                    <TextView
                        android:paddingTop="8dp"
                        android:text="10:00:00"
                        android:id="@+id/edit_tutupwarung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/black"
                        android:background="@drawable/kotakisi"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/baris1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"

                    >

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:id="@+id/gambar_makanan"
                        android:background="@drawable/kotakfoto" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/camera"
                            android:layout_marginRight="10dp"
                            android:id="@+id/btn_foto" />

                        <ImageView
                            android:layout_width="30dp"
                            android:id="@+id/btn_galery"
                            android:layout_marginLeft="10dp"
                            android:layout_height="30dp"
                            android:background="@drawable/galery" />


                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>


        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:background="#F3B11A"
            android:layout_height="wrap_content"
            android:text="TAMBAHKAN"
            android:id="@+id/btnUpload"
            android:onClick="@{viewmodels.btn_aktifasi}"
            android:fontFamily="@font/poppins"
            android:textColor="#000000"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</layout>