<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    app:cardCornerRadius="15dp"
    android:elevation="5dp"
    android:layout_marginStart="16dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/gambar_makanan"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
             app:srcCompat="@drawable/popularfood1" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alef_bold"
            android:layout_margin="5dp"
            android:layout_below="@+id/gambar_makanan"
            android:text="Nasi Goreng Hongkong"
            android:maxLength="20"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colordongker"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/harga"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alef_bold"
            android:text="Rp. 200000"
            android:textColor="@color/emas"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
